<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	
	<display-name>notifications</display-name>

	<servlet>
		<servlet-name>smartshift-notifications</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
	    <init-param>
	        <param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
	        <param-value>smartshift.common.security.AuthFilter</param-value>
	    </init-param>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>smartshift.common.jersey;smartshift.notifications.jersey</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>smartshift-notifications</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<listener>
		<listener-class>smartshift.common.hibernate.HibernateListener</listener-class>
	</listener>
	
</web-app> 