<project name="ServerAPI" default="tomcat-deploy" basedir="../..">
	<property file="conf/ant/build.properties" />
	<property name="war.file" value="${project.name.api}.war" />
	<property name="war.path.api" value="${dist.dir}/${war.file}" />

	<path id="classpath">
		<fileset dir="${lib.dir}/jar">
			<include name="*.jar" />
		</fileset>
	</path>

	<taskdef name="deploy" classname="org.apache.catalina.ant.DeployTask">
		<classpath refid="classpath" />
	</taskdef>
	<taskdef name="undeploy" classname="org.apache.catalina.ant.UndeployTask">
		<classpath refid="classpath" />
	</taskdef>
	<taskdef name="reload" classname="org.apache.catalina.ant.ReloadTask">
		<classpath refid="classpath" />
	</taskdef>

	<target name="build-clean">
		<echo>Cleaning the build directory</echo>
		<delete dir="${out.dir}" />
	</target>
	<target name="build-init">
		<echo>Creating sourc folders</echo>
		<mkdir dir="${build.dir.api}/WEB-INF/" />
		<mkdir dir="${build.dir.api}/WEB-INF/classes"/>
		<mkdir dir="${build.dir.api}/WEB-INF/lib"/>
		<mkdir dir="${build.dir.api}/META-INF/" />
	</target>
	<target name="build-compile" depends="build-init">
		<echo>Compiling the source files</echo>
		<javac destdir="${build.dir.api}/WEB-INF/classes" verbose="false" debug="${build.debug}" debuglevel="lines,vars,source">
            <src path="${src.dir.api}" />  
            <src path="${src.dir.notifications}" />  
			<classpath refid="classpath" />
		</javac>
	</target>
	<target name="build-package" depends="build-compile">
		<echo>Copying compiled sources</echo>
		<copy todir="${build.dir.api}/WEB-INF/classes">
			<fileset dir="${conf.dir}/hibernate" />
		</copy>
		<copy todir="${build.dir.api}/WEB-INF/classes">
			<fileset dir="${conf.dir}/log4j" />
		</copy>
		<copy todir="${build.dir.api}/WEB-INF">
			<fileset dir="${conf.dir}/web/api" />
		</copy>
		<copy todir="${build.dir.api}">
			<fileset dir="${web.dir}" />
		</copy>
		<copy todir="${build.dir.api}/META-INF" file="${conf.dir}/web/api/context.xml" />
		<copy todir="${build.dir.api}/WEB-INF/lib">
			<fileset dir="${lib.dir}/jar">
				<exclude name="javax.servlet.jar" />
				<exclude name="servlet-api.jar" />
			</fileset>
		</copy>
	</target>
	<target name="build-war" depends="build-package">
		<echo>Building the war file</echo>
		<war destfile="${war.path.api}" webxml="${build.dir.api}/WEB-INF/web.xml">
			<fileset dir="${build.dir.api}" />
		</war>
	</target>

	<target name="tomcat-deploy" depends="build-war, tomcat-remove">
		<echo>Deploying war to tomcat</echo>
		<property name="war.abs.path" location="${war.path.api}" />
		<deploy url="${tomcat.url}"
			username="${tomcat.user}"
			password="${tomcat.pass}"
			path="/${context.root.api}"
			war="${war.abs.path}" />
	</target>
	<target name="tomcat-reload">
		<reload url="${tomcat.url}"
			username="${tomcat.user}"
			password="${tomcat.pass}"
			path="/${context.root.api}" />
	</target>
	<target name="tomcat-remove">
		<undeploy failonerror="false"
		    url="${tomcat.url}"
			username="${tomcat.user}"
			password="${tomcat.pass}"
			path="/${context.root.api}" />
	</target>
</project>